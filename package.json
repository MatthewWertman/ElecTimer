{
    "name": "ElecTimer",
    "productName": "ElecTimer",
    "version": "1.1.1",
    "description": "Basic timer app using Electron 18",
    "license": "MIT",
    "homepage": "https://github.com/MatthewWertman/ElecTimer",
    "repository": {
        "type": "git",
        "url": "https://github.com/MatthewWertman/ElecTimer.git"
    },
    "author": {
        "name": "Matthew Wertman",
        "email": "mattwert@charter.net",
        "url": "https://github.com/MatthewWertman"
    },
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "start": "electron .",
        "dev": "electronmon .",
        "test": "mocha",
        "pack": "electron-builder --dir",
        "dist": "electron-builder --macos --linux --windows"
    },
    "main": "main.js",
    "devDependencies": {
        "electron": "^18.3.1",
        "electron-builder": "^22.14.13",
        "electron-log": "^4.4.7",
        "electronmon": "^2.0.2",
        "eslint": "^8.16.0",
        "mocha": "^9.2.2",
        "spectron": "^19.0.0"
    },
    "build": {
        "appId": "com.matthewwertman.electimer",
        "mac": {
            "category": "public.app-category.utilities",
            "icon": "build/icon.png"
        },
        "dmg": {
            "icon": "build/icon.png",
            "iconSize": 160,
            "contents": [
                {
                    "x": 180,
                    "y": 170
                },
                {
                    "x": 480,
                    "y": 170,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "category": "Utility",
            "icon": "build/icon.png"
        },
        "deb": {
            "maintainer": "MatthewWertman"
        },
        "win": {
            "icon": "build/icon.png",
            "target": [
                "nsis",
                "portable"
            ]
        }
    }
}
